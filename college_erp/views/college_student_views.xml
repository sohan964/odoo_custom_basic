<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- form view -->
    <record id="college_student_view_form" model="ir.ui.view">
        <field name="name">college.student.view.form</field>
        <field name="model">college.student</field>
        <field name="arch" type="xml">
            <form >
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar"/>
                    <group>
                        <group>
                            <field name="admission_no"/>
                            <field name="admission_date"/>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="email"/>
                            <field name="father_name"/>
                            <field name="mother_name"/>
                        </group>
                        <group>
                            <field name="phone"/>
                            <field name="communication_address"/>
                            <field name="same_as_communication" widget="boolean_toggle"/>
                            <span class="o_form_label o_td_label o_address_type fw-bold" invisible="same_as_communication">Permanent Address</span>
                            <div class="o_address_format" invisible="same_as_communication">
                                <field name="street" placeholder="Street..." class="o_address_street" />
                                <field name="street2" placeholder="Street 2..." class="o_address_street" />
                                <field name="city" placeholder="City" class="o_address_city" />
                                <field name="state_id" class="o_address_state" placeholder="State" />
                                <field name="zip" placeholder="ZIP" class="o_address_zip" />
                                <field name="country_id"  placeholder="Country" />
                            </div>
                        </group>
                    </group>
                    <notebook>
                        <page string="Permanent Address" name="permanent_address" invisible="same_as_communication">
                            <group>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street" />
                                    <field name="street2" placeholder="Street 2..." class="o_address_street" />
                                    <field name="city" placeholder="City" class="o_address_city" />
                                    <field name="state_id" class="o_address_state" placeholder="State" />
                                    <field name="zip" placeholder="ZIP" class="o_address_zip" />
                                    <field name="country_id"  placeholder="Country" />
                                </div>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <!-- <chatter /> -->
            </form>
        </field>
    </record>
    <!-- List View -->
    <record id="college_student_view_list" model="ir.ui.view">
        <field name="name">college.student.view.list</field>
        <field name="model">college.student</field>
        <field name="arch" type="xml">
            <list string="Students">
                <field name="admission_no"/>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="admission_date"/>
                <field name="phone"/>
                <field name="email"/>
            </list>
        </field>
    </record>
    <!-- Kanban View -->
    <record id="college_student_view_kanban" model="ir.ui.view">
        <field name="name">college.student.view.kanban</field>
        <field name="model">college.student</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="admission_no"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="image_1920" class="oe_avatar"/>
                <templates>
                    <t t-name="kanban-box">
                        <group class="oe_kanban_global_click o_kanban_record">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('college.student', 'image_1920', record.id.value)"
                                 class="oe_kanban_avatar"/>
                            </div>
                            <div class="o_kanban_details">
                                <strong>
                                    <field name="first_name"/>
                                    <field name="last_name"/>
                                </strong>
                                <div>
                                Admission No:
                                    <field name="admission_no"/>
                                </div>
                                <div>
                                    <field name="email"/>
                                </div>
                                <div>
                                    <field name="phone"/>
                                </div>
                            </div>
                        </group>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <!-- window action -->
    <record id="action_college_erp" model="ir.actions.act_window" >
        <field name="name">College ERP</field>
        <field name="res_model">college.student</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first student
            </p>
        </field>
    </record>
</odoo>