<odoo>
    <!-- Tree View -->
    <record id="view_mini_partner_tree" model="ir.ui.view">
        <field name="name">mini.partner.list</field>
        <field name="model">mini.partner</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="is_company"/>
            </list>
        </field>
    </record>
    <!-- Form View -->
    <record id="view_mini_partner_form" model="ir.ui.view">
        <field name="name">mini.partner.form</field>
        <field name="model">mini.partner</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="is_company"/>
                        <field name="parent_id"/>
                    </group>
                    <group>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="mobile"/>
                        <field name="active"/>
                    </group>
                    <notebook>
                        <page string="Contacts">
                            <field name="child_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_mini_partner_kanban" model="ir.ui.view">
        <field name="name">mini.partner.kanban</field>
        <field name="model">mini.partner</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_example">
                <!-- make sure these fields are fetched -->
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="o_kanban_record">
                            <div class="o_kanban_primary">
                                <field name="name"/>
                            </div>
                            <div>
                                <span t-esc="record.email.value"/>
                                <span t-if="record.phone">
                                    <br/>
                                    <i class="fa fa-phone"/>
                                    <t t-esc="record.phone.raw_value"/>
                                </span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_mini_partner" model="ir.actions.act_window">
        <field name="name">Mini Contacts</field>
        <field name="res_model">mini.partner</field>
        <field name="view_mode">kanban,list,form</field>
    </record>
    <!-- Menu -->
    <menuitem id="menu_mini_root" name="Mini Contacts"/>
    <menuitem id="menu_mini_partner"
              name="Contacts"
              parent="menu_mini_root"
              action="action_mini_partner"/>
</odoo>