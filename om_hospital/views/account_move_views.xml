<?xml version="1.0" encoding="utf-8"?>
<odoo> <!-- view for account_move.py file-->
    <record id="view_move_form_inherited" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field> 
        <field name="inherit_id" ref="account.view_move_form"/> <!-- inheriting the (invoicing) account.view_move_form -->
        <field name="arch" type="xml">
            <!-- this way show a field -->
            <xpath expr="//field[@name='delivery_date']" position="after">
                <field name="appointment_id" /> <!-- adding appointment_id after the delivery_date field -->
            </xpath>

            <!-- this way hide a field -->
            <xpath expr="//group[@name='accounting_info_group']/field[@name='auto_post']" position="attributes">
                <attribute name="invisible">1</attribute> <!-- adding appointment_id after the delivery_date field -->
            </xpath>
        </field>
    </record>

    <record id="view_move_list_inherited" model="ir.ui.view">
        <field name="name">account.move.list</field>
        <field name="model">account.move</field> 
        <field name="inherit_id" ref="account.view_out_invoice_tree"/> <!-- inheriting the (invoicing) account.view_move_form -->
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date']" position="before">
                <field name="appointment_id" /> <!-- adding appointment_id after the delivery_date field -->
            </xpath>
        </field>
    </record>
</odoo>
