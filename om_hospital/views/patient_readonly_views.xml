<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_hospital_patient_readonly_list" model="ir.ui.view" >
        <field name="name">hospital.patient.readonly.list</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <list string="Patient" create="0" edit="0" delete="0"> <!-- create="0" means the new button will missing-->
                <field name="name" />
                <field name="date_of_birth" />
                <field name="gender" />
            </list>
        </field>
    </record>
    <record id="view_hospital_patient_readonly_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form string="Patient" create="0" edit="0" delete="0"> <!-- edit="0" means not editable-->
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="date_of_birth" />
                        <field name="gender"/>
                    </group>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>
    <record id="action_hospital_readonly_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">list,form</field>
        <!-- field view_ids for to show views that action_id ref under here -->
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_hospital_patient_readonly_list')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_hospital_patient_readonly_form')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create a new Patient
            </p>
        </field>
    </record>
</odoo>
